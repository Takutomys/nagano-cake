<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class= "container">
        <% if customer_signed_in? %>
        <ul>
          <li class = "nav_item">
            <%= link_to "マイページ", customer_path, class: "btn btn-secondary" %>
            <%= link_to "商品一覧", class: "btn btn-secondary" %>
            <%= link_to "カート", class: "btn btn-secondary" %>
            <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-secondary" %>
          </li>
        </ul>  
       <% end %> 
      </nav> 
     </div> 
    </header>
    <%= yield %>
  </body>
</html>
