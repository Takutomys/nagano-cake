<div class="container">
  <div class="row offset-2 my-2">
    <h2 class="text-center">商品新規登録</h2>
  </div>
  <div class="row offset-3">
    <%= form_with model: Item.new, url: admin_items_path, class:"my-2" do |f| %>
      <div class="form-group row">
        <%= f.label :"商品画像", class:"col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= f.file_field :image %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :"商品名", class:"col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= f.text_field :name, class:"form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :"商品説明", class:"col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= f.text_area :introduction, :cols => 30, :rows => 5 , class:"form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :"ジャンル", class:"col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), class:"form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :"税抜価格", class:"col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <div class="input-group">
          <%= f.text_field :price, class:"form-control" %>
          <span class="input-group-text">円</span>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :"販売ステータス", class:"col-sm-5 col-form-label" %>
        <div class="radio-inline">
          <%= f.radio_button :is_active, "true" %>
          <%= f.label :is_active, "販売中", class:"col-form-label" %>
          <%= f.radio_button :is_active, "false" %>
          <%= f.label :is_active, "販売停止中", class:"col-form-label" %>
        </div>
      </div>
      <div class="row justify-content-center">
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>



  