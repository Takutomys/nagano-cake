<div class="container">
  <h2 class="my-3">商品詳細</h2>
  <div class="row my-5">
    <div class="col-md-3">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
      <% end %>
    </div>
    <div class="col-md-7">
    <table style="height: 200px;">
       <tbody>
        <tr>
          <td class="w-25 h-25 pr-4">商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>
            (税抜価格)</td>
          <td><%= @item.price.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <td class="pr-4">販売ステータス</td>
          <td>
            <% if @item.is_active %>販売中
            <% else %>販売停止中
            <% end %>
           </td>
        </tr>
      </tbody>
    </table>
    <div class="d-grid gap-2 col-6 mx-auto">
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success mt-4" %>
   </div>
   <div class="col-md-2"></div>
  </div>
</div>