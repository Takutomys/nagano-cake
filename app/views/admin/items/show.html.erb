<h2>商品詳細</h2>
<table>
  <tbody>
    <tr>
     <% if @item.image.attached? %>
      <%= image_tag @item.image, size: "200x200" %>
     <% else %>
      <%= image_tag 'no_image', size: "200x200" %>
     <% end %>
     <td>商品名</td>
     <td><%= @item.name %></td>
    </tr>
    <tr>
     <td>商品説明</td>
     <td><%= @item.introduction %></td>
    </tr>
    <tr>
     <td>ジャンル</td>
     <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>税込価格<br>
          (税抜価格)</td>
      <td><%= @item.price.to_s(:delimited) %>円</td>
    </tr>
    <tr>
      <td>
       <% if @item.is_active %>
     　販売中
       <% else %>
        販売停止中
       <% end %>
      </td>
    </tr>
    <tr>
    <td><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-secondary" %></td>
    </tr>
   </tbody>
 </table>