<h2>商品新規登録</h2>
<table>
 <tbody>
  <%= form_with model: Item.new, url: admin_items_path do |f| %>
  <tr>
   <td>商品画像</td>
   <td><%= f.file_field :image %></td>s
  </tr>
  <tr>
   <td>商品名</td>
   <td><%= f.text_field :name %></td>
  </tr>
  <tr>
   <td>商品説明</td>
   <td><%= f.text_area :introduction %></td>
  </tr>
  <tr>
   <td>ジャンル</td>
   <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
  </tr>
  <tr>
   <td>税抜価格</td>
   <td><%= f.text_field :price %>円</td>
  <tr>
   <td>販売ステータス</td>
   <td>
   <%= f.radio_button :is_active, "true" %>
   <%= f.label :is_active, "販売中" %>

   <%= f.radio_button :is_active, "false" %>
   <%= f.label :is_active, "販売停止中" %>
   </td>
  </tr>
  <tr>
   <td><%= f.submit '変更を保存' %></td>
  <% end %>
 </tbody>
</table>
