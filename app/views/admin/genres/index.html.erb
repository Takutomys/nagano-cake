<h2>ジャンル一覧・追加</h2>
<%= form_with model: Genre.new,url: admin_genres_path do |f| %>
　<p>ジャンル名
　<%= f.text_field :name %>
　<%= f.submit '新規登録' %>
　</p>
<% end %>
 <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
   <% @genres.each do |genre| %>
   <tr>
    <td><%= genre.name %></td>
      <td><%= link_to "Edit", edit_admin_genre_path(genre.id), class: "btn btn-secondary" %></td>
   </tr>
   <% end %>
  </tbody>
</table>

