<div class="contener">
  <div class="row">
    <div class="col-4 offset-1">
      <h2 class="text-center bg-light">ジャンル一覧・追加</h2>
      <%= form_with model: Genre.new, url: admin_genres_path, class:"my-5" do |f| %>
　      <%= f.label :"ジャンル名" %>
　      <%= f.text_field :name %>
　      <%= f.submit '新規登録', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class="table table-hover table-inverse col-4 offset-1">
      <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

