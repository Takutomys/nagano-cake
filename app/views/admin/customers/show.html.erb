<h2><%= customer.last_name %><%= customer.first_name %>さんの会員詳細</h2>
<table>
  <tbody>
    <tr>
     <td>商品名</td>
     <td><%= @item.name %></td>
    </tr>
    <tr>
     <td>会員ID</td>
     <td><%= @customer.id %></td>
    </tr>
    <tr>
     <td>氏名</td>
     <td><%= @customer.last.name %><%= @customer.first.name %></td>
    </tr>
    <tr>
     <td>フリガナ</td>
     <td><%= @customer.last.name.kana %><%= @customer.first.name.kana %></td>
    </tr>
    <tr>
     <td>郵便番号</td>
     <td><%= @customer.postal.code %></td>
    </tr>
    <tr>
     <td>住所</td>
     <td><%= @customer.adress %></td>
    </tr>
    <tr>
     <td>電話番号</td>
     <td><%= @customer.telephon.number %></td>
    </tr>
    <tr>
     <td>メールアドレス</td>
     <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
       <% if @customer.is_active %>
     　有効
       <% else %>
        退会
       <% end %>
      </td>
    </tr>
    <tr>
    <td><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-secondary" %></td>
    <td><%= link_to "注文履歴一覧を見る", edit_admin_customer_path(@customer), class: "btn btn-secondary" %></td>
    </tr>
   </tbody>
 </table>
