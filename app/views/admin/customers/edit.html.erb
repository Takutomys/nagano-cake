<div class="container">
  <h2><%= @customer.last_name+@customer.first_name %>さんの会員編集</h2>
  <div class="row offset-1 my-3">
    <table class="w-75",  cellpadding="5">
    <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <tr>
        <td><%= f.label :"会員ID" %></td>
        <td class="offset-2"><%= @customer.id %></td>
      </tr>
      <tr>
        <td><%= f.label :"氏名" %></td>
        <td><%= f.text_field :last_name, class:"form-control" %></td>
        <td><%= f.text_field :first_name, class:"form-control offset-1" %></td>
      </tr>
      <tr>
        <td><%= f.label :"フリガナ" %></td>
        <td><%= f.text_field :last_name_kana, class:"form-control" %></td>
        <td><%= f.text_field :first_name_kana, class:"form-control offset-1" %></td>
      </tr>
      <tr>
        <td><%= f.label :postal_code, '郵便番号' %></td>
        <td><%= f.text_field :postal_code, class:"form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :address, '住所' %></td>
        <td colspan="2"><%= f.text_field :address, class:"form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :telephone_number, '電話番号' %></td>
        <td><%= f.text_field :telephone_number, class:"form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :email, 'メールアドレス' %></td>
        <td><%= f.email_field :email, class:"form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :"会員ステータス" %></td>
        <td>
          <%= f.radio_button :is_active, "true" %>
          <%= f.label :is_active, "有効" %>
          <%= f.radio_button :is_active, "false" %>
          <%= f.label :is_active, "退会" %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
      </tr>
   <% end %>
   </table>
  </div>
</div>
