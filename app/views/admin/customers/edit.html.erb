<h2><%= @customer.last_name+@customer.first_name %>さんの会員編集</h2>
<%= form_with model: Customer.new, url: admin_customers_path do |f| %>
<div class="field">
   <%= f.label :"会員ID" %>
   <%= @customer.id %>
</div>

<div class="field">
   <%= f.label :"氏名" %>
   <%= f.label :last_name, '(姓)' %>
   <%= f.text_field :last_name %>

   <%= f.label :first_name, '(名)' %>
   <%= f.text_field :first_name %>
  </div>

  <div class="field">
   <%= f.label :"フリガナ" %>
   <%= f.label :last_name_kana, '(セイ)' %>
   <%= f.text_field :last_name_kana %>

   <%= f.label :first_name_kana, '(メイ)' %>
   <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :postal_code, '郵便番号' %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address, '住所' %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, '電話番号' %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email %>
  </div>

  <div class="status">
    <%= f.radio_button :is_active, "true" %>
    <%= f.label :is_active, "有効" %>

    <%= f.radio_button :is_active, "false" %>
    <%= f.label :is_active, "退会" %>
  </div>

  <div class="button">
    <%= f.submit '変更を保存' %>
  </div>
<% end %>
