<h2>注文履歴詳細</h2>
<table style="border:none;">
  <tbody style="border:none;">
      <tr style="border:none;">
       <td style="border:none;">購入者</td>
        <td style="border:none;"><%= @order.name %></td>
      </tr>
      <tr style="border:none;">
        <td style="border:none;">注文日</td>
        <td style="border:none;"><%= @order.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
      </tr>
      <tr style="border:none;">
        <td style="border:none;">配送先</td>
        <td style="border:none;">
          〒<%= @order.postal_code+" "+@order.address %><br>
          <%= @order.name %>
        </td>
      </tr>
      <tr style="border:none;">
        <td style="border:none;">支払方法</td>
        <td style="border:none;"><%= @order.payment_method_i18n %></td>
      </tr>
      <tr style="border:none;">
        <td style="border:none;">注文ステータス</td>
        <td style="border:none;">
          <%= form_with model: @order, url: admin_order_path(@order) do |f| %>
            <%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
            <%= f.submit "更新" %>
          <% end %>
        </td>
      </tr>
   </tbody>
</table>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
　<% @order_details.each do |order_detail| %>
　  <tr>
　    <td><%= order_detail.item.name %></td>
　    <td><%= order_detail.price.to_s(:delimited)  %></td>
　    <td><%= order_detail.amount %></td>
　    <td><%= (order_detail.price*order_detail.amount).to_s(:delimited) %></td>
　    <td>
　      <%= form_with model: order_detail, url: admin_order_detail_path(order_detail) do |f| %>
          <%= f.select :making_status, OrderDetail.making_statuses.keys.map {|k| [I18n.t("enums.order_detail.making_status.#{k}"), k]} %>
          <%= f.submit "更新" %>
        <% end %>
　    </td>
　  </tr>
  <% end %>
<table>
    <tr><th>商品合計</th><td><%= @total.to_s(:delimited) %></td></tr>
    <tr><th>送料</th><td><%= @order.shopping_cost %></td></tr>
    <tr><th>ご請求額</th><td><%= (@order.shopping_cost+@total).to_s(:delimited) %></td></tr>
</table>
