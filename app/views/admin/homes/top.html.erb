<div class="container">
  <h2 class="my-2">注文履歴一覧</h2>
  <div class="row justify-content-center">
    <table class="table table-hover mt-1">
      <thead class="thead-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
       </thead>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td>
          <td><%= order.name %></td>
          <td><%= order.count_amount %></td>
          <td><%= order.status_i18n %></td>
        </tr>
  　   <% end %>
    </table>
  </div>
  <div class="row">
      <div class="col-md-6 offset-md-5 mt-5">
        <%= paginate @orders %>
      </div>
    </div>
</div>
