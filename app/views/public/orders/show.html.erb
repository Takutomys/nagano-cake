<div class="container">
  <div class="row">
    <h2 class="mt-3">注文履歴詳細</h2>
  </div>
  <div class="row">
    <div class="col-7 mt-4">
      <h4>注文情報</h4>
      <table class="table table-bordered">
        <tr><th bgcolor="#cococo">注文日</th><td><%= l @order.created_at %></td></tr>
        <tr><th bgcolor="#cococo">配送先</th><td>
          〒<%= @order.postal_code %><br>
          <%= @order.address %><br>
          <%= @order.name %>
       </td></tr>
       <tr><th bgcolor="#cococo">支払方法</th><td><%= @order.payment_method_i18n %></td></tr>
       <tr><th bgcolor="#cococo">ステータス</th><td><%= @order.status_i18n %></td></tr>
     </table>
   </div>
   
   <div class="col-4 mt-4">
     <h4>請求額</h4>
     <table class="table table-bordered">
       <% @order_details.each do |order_detail| %>
         <% @total = order_detail.price*order_detail.amount %>
       <% end %>
       <tr><th bgcolor="#cococo">商品合計</th><td><%= @total.to_s(:delimited) %></td></tr>
       <tr><th bgcolor="#cococo">配送料</th><td><%= @order.shopping_cost %></td></tr>
       <tr><th bgcolor="#cococo">ご請求額</th><td><%= (@order.shopping_cost+@total).to_s(:delimited) %></td></tr>
     </table>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <h4>注文内容</h4>
      <table class="table table-bordered">
        <thead>
          <tr bgcolor="#cococo">
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price.to_s(:delimited) %></td>
          <td><%= order_detail.amount %></td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
        <% end %>
      </table>
    </div>  
  </div>
</div>