<div class="container">
  <h2 class="offset-1">注文情報入力</h2>
  <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
    <h4 class="mt-3">支払方法</h4>
    <div class="row">
      <div class="col-4 offset-1">
        <%= f.radio_button :payment_method, "credit_card" %>
          <%= f.label :payment_method, "クレジットカード" %>
      </div>
    </div>
    <div class="row">
      <div class="col-4 offset-1">
        <%= f.radio_button :payment_method, "transfer" %>
        <%= f.label :payment_method, "銀行振込" %>
      </div>
    </div>
    <h4>お届け先</h4>
    <div class="row">
      <div class="col-7 offset-1">
        <%= f.radio_button :select_address, "my_address" %>
        <%= f.label :select_address, "ご自身の住所" %><br>
        <%= current_customer.address_display %><br>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-7 offset-1">
        <%= f.radio_button :select_address, "registered_address" %>
        <%= f.label :select_address, "登録済住所から選択" %><br>
        <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %><br>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-7 offset-1">
        <%= f.radio_button :select_address, "new_address" %>
        <%= f.label :select_address, "新しいお届け先" %>
      </div>
    </div>
    <div class="row">
      <%= f.label :postal_code, '郵便番号(ハイフンなし)', class:"col-4 offset-1" %>
      <%= f.text_field :postal_code, class:"col-4 form-control" %>
    </div>
    <div class="row mt-2">
      <%= f.label :address, '住所', class:"col-4 offset-1" %>
      <%= f.text_field :address, class:"col-4 form-control" %>
    </div>
    <div class="row mt-2">
      <%= f.label :name, '宛名', class:"col-4 offset-1" %>
      <%= f.text_field :name, class:"col-4 form-control" %>
    </div>
    <div class="row mt-3 offset-3">
      <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>