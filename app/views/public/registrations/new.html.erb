<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="container">
    <h2 class="offset-1">新規会員登録</h2>
    <div class="row">
      <div class="col-3 mt-2">
        <%= f.label :"名前" %>
      </div>
      <div class="col-4 form-inline mt-2">
        <%= f.label :last_name, '(姓)', class:"col-4" %>
        <%= f.text_field :last_name, class:"form-control-sm col-8" %>
      </div>
      <div class="col-4 form-inline mt-2">
        <%= f.label :first_name, '(名)', class:"col-4" %>
        <%= f.text_field :first_name, class:"form-control-sm col-8" %>
      </div>
    </div>

    <div class="row">
      <div class="col-3 mt-2">
        <%= f.label :"フリガナ" %>
      </div>
      <div class="col-4 form-inline mt-2">
        <%= f.label :last_name_kana, '(セイ)', class:"col-4" %>
        <%= f.text_field :last_name_kana, class:"form-control-sm col-8" %>
      </div>
      <div class="col-4 form-inline mt-2">
        <%= f.label :first_name_kana, '(メイ)', class:"col-4" %>
        <%= f.text_field :first_name_kana, class:"form-control-sm col-8" %>
      </div>
    </div>
    <div class="row">
      <div class="col-3 mt-2">
        <%= f.label :email, 'メールアドレス' %>
      </div>
      <div class="col-4 form-inline mt-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control-sm col-8 offset-4" %>
      </div>
    </div>

  <div class="row">
    <div class="col-3 mt-2">
      <%= f.label :postal_code, '郵便番号' %>
    </div>
    <div class="col-4 form-inline mt-2">
      <%= f.text_field :postal_code, class:"form-control-sm col-8 offset-4" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3 mt-2">
      <%= f.label :address, '住所' %>
    </div>
    <div class="col-4 form-inline mt-2">
      <%= f.text_field :address, class:"form-control-sm col-8 offset-4" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3 mt-2">
      <%= f.label :telephone_number, '電話番号(ハイフンなし)' %>
    </div>
    <div class="col-4 form-inline mt-2">
      <%= f.text_field :telephone_number, class:"form-control-sm col-8 offset-4" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3 mt-2">
      <%= f.label :password_length, 'パスワード(6文字以上)' %>
      <% if @minimum_password_length %>
      <% end %>
    </div>
    <div class="col-4 form-inline mt-2">
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control-sm col-8 offset-4"  %>
    </div>
  </div>

  <div class="row">
    <div class="col-3 mt-2">
      <%= f.label :possword_confirmation, 'パスワード(確認用)' %>
    </div>
    <div class="col-4 form-inline mt-2">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control-sm col-8 offset-4" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3"></div>
       <div class="col-4 mt-2">
      <%= f.submit "新規登録", class: "btn btn-success col-8 offset-4" %>
    </div>
  </div>
<% end %>

  <div class="row">
      <h2 class="mt-3 pl-5">既に登録済みの方</h2>
  </div>
  <div class="row">
    <p class="mt-3 offset-1"><%= link_to 'こちら', new_customer_session_path %> からログインしてください。</P>
  </div>
</div>




