<div class="container">
  <h2 class="offset-2 mt-5">配送先編集</h2>
  <div class="row offset-1 my-3">
    <table class="w-75",  cellpadding="5">
      <%= form_with model: @address do |f| %>
        <tr>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <td><%= f.label :postal_code, '郵便番号（ハイフンなし)' %></td>
          <td><%= f.text_field :postal_code, class:"form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :address, '住所' %></td>
          <td colspan="2"><%= f.text_field :address, class:"form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :name, '宛名' %></td>
          <td><%= f.text_field :name, class:"form-control" %></td>
          <td><%= f.submit '変更内容を保存', class:"btn btn-success offset-7" %></td>
        </tr>
      <% end %>
  </div>
</div>