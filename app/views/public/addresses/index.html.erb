<div class="container">
  <h2>配送先登録/一覧</h2>
  <div class="row offset-1 my-3">
     <table class="w-75",  cellpadding="5">
       <%= form_with model: @address do |f| %>
         <tr>
           <th></th>
           <th></th>
           <th></th>
         </tr>
         <tr>
           <td><%= f.label :postal_code, '郵便番号（ハイフンなし)' %></td>
           <td><%= f.text_field :postal_code, class:"form-control" %></td>
         </tr>
         <tr>
           <td><%= f.label :address, '住所' %></td>
           <td colspan="2"><%= f.text_field :address, class:"form-control" %></td>
         </tr>
         <tr>
           <td><%= f.label :name, '宛名' %></td>
           <td><%= f.text_field :name, class:"form-control" %></td>
           <td><%= f.submit '新規登録', class: "btn btn-success offset-9" %></td>
         </tr>
       <% end %>
  </div>
</div>
<div class="container">
  <div class="row">
    <table class="table table-bordered mt-5">
      <thead>
        <tr class="table-secondary">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td class="w-25">
            <%= link_to "編集する", edit_address_path(address), class: "btn btn-success offset-1" %>
            <%= link_to '削除する', address_path(address), method: :delete, "data-confirm" => "本当に削除しますか？",  class: "btn btn-danger offset-1" %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>