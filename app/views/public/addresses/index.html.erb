<h2>配送先登録/一覧</h2>
<%= form_with model: @address do |f| %>
  <div class="field">
     <%= f.label :postal_code, '郵便番号（ハイフンなし)' %>
     <%= f.text_field :postal_code %>
  </div>

  <div class="field">
     <%= f.label :address, '住所' %>
     <%= f.text_field :address %>
  </div>

  <div class="field">
     <%= f.label :name, '宛名' %>
     <%= f.text_field :name %>
  </div>

  <div class="button">
    <%= f.submit '新規登録' %>
  </div>
  <% end %>

<table class="table table-hover table-inverse">
  <thead>
   <tr>
     <th>郵便番号</th>
     <th>住所</th>
     <th>宛名</th>
     <th></th>
   </tr>
  </thead>
  <% @addresses.each do |address| %>
   <tr>
     <td><%= address.postal_code %></td>
     <td><%= address.address %></td>
     <td><%= address.name %></td>
     <td><%= link_to "編集する", edit_address_path(@addresses), class: "btn btn-secondary" %></td>
     <td><%= link_to '削除する', addresses_path, class: "btn btn-secondary" %></td>
   </tr>
  <% end %>
 </table>