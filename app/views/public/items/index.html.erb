<div class="container">
  <h2 class="mt-4">商品一覧</h2>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <%= link_to item_path(item) do %>
          <% if item.image.attached? %>
            <%= image_tag item.image, size: "100x100" %><br>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %><br>
          <% end %>
        <% end %>
        <%= item.name %><br>
        ￥<%= item.price.to_s(:delimited) %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-5 offset-md-5 mt-5">
      <%= paginate @items %>
    </div>
  </div>
</div>


